<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sss.android.cmaactivityreport.SettingsActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="EMail"
        android:id="@+id/textView_email"
        android:textStyle="bold"/>

    <!-- email to name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="To:"
        android:id="@+id/textView_email_to"
        android:layout_below="@+id/textView_email"
        android:layout_toLeftOf="@+id/editText_email_to"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:paddingTop="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_email_to"
        android:text="Paul Shepherd"
        android:layout_weight="1"
        android:layout_alignTop="@+id/textView_email_to"
        android:layout_toRightOf="@+id/textView_email"
        android:layout_toEndOf="@+id/textView_email"/>

    <!-- email to address -->>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Addr:"
        android:id="@+id/textView_email_addr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/editText_addr"
        android:layout_alignTop="@+id/editText_addr"
        android:gravity="center_vertical"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText_addr"
        android:layout_weight="1"
        android:text="pauldshep@gmail.com"
        android:layout_below="@+id/editText_email_to"
        android:layout_alignLeft="@+id/editText_email_to"
        android:layout_alignStart="@+id/editText_email_to"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USE"
        android:id="@+id/settings_button_use"
        android:layout_below="@+id/textView_email_addr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickSettingsButtonUse"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABORT"
        android:id="@+id/settings_button_abort"
        android:layout_below="@+id/editText_addr"
        android:layout_alignRight="@+id/editText_addr"
        android:layout_alignEnd="@+id/editText_addr"
        android:onClick="onClickSettingsButtonAbort"/>

</RelativeLayout>
